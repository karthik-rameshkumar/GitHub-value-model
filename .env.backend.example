# Backend Environment Variables Template
# Copy this file to .env in the backend directory and fill in the values

# Database Configuration
DATABASE_URL=postgresql://essp_user:essp_password@localhost:5432/essp_dashboard
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=essp_dashboard
DATABASE_USER=essp_user
DATABASE_PASSWORD=essp_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# GitHub API (for fetching repository metrics)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_API_URL=https://api.github.com

# Logging
LOG_LEVEL=debug

# Health Check
HEALTH_CHECK_INTERVAL=30000